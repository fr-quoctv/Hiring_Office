<div class="row full-height margin-left-0 margin-right-0 padding-top-10">
  <div class="col-sm-12 col-lg-3">
    <div class="widget">
      <div class="widget-extra-full venue-items-info">
        <div class="col-xs-12 text-center gutter">
          <%= link_to new_venue_path, class: "btn btn-primary" do %>
            <i class="fa fa-plus-square"></i></i> <%= t "add_venue" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <% @venues.each do |venue| %>
    <div class="col-sm-12 col-lg-3 venue-item-hover">
      <div class="widget">
        <div class="widget-extra-full venue-items">
          <div class="widget-options">
            <i class="fa fa-cog setting_icon" aria-hidden="true" data-toggle="dropdown"></i>
            <ul class="dropdown-menu fix-venue-dropdown" role="menu">
              <li>
                <%= link_to edit_venue_path(venue) do %>
                  <i class="fa fa-pencil" aria-hidden="true"></i>
                  <%= t ".edit_venue" %>
                <% end %>
              </li>
              <li>
                <%= link_to venue_path(venue), class: "delete_venue",
                  method: :delete, remote: true,
                  data: {confirm: t(".confirm_delete")} do %>
                  <i class="fa fa-trash" aria-hidden="true"></i>
                  &nbsp;<%= t ".delete_venue" %>
                <% end %>
              </li>
            </ul>
          </div>
          <div data-percent="90" data-line-width="2" data-bar-color="#333333" data-track-color="#eeeeee">
            <% if venue.images.any? %>
              <%= link_to image_tag(venue.images.first.picture_url,
                class: "img wth-80"), edit_venue_path(venue) %>
            <% else %>
              <%= link_to image_tag("not_available", class: "img wth-80"), edit_venue_path(venue) %>
            <% end %>
          </div>
        </div>
        <div class="widget-extra themed-background text-center venue-info">
          <h3 class="widget-content-light">
            <%= link_to venue_path(venue), class: "venue_title" do %>
              <strong><%= venue.name %></strong><br>
            <% end %>
          </h3>
          <small class="small-custom"><%= venue.description %></small>
          <div class="widget-content-light venue-address padding-0-15 address-custom">
            <small class="small-custom" style="display:block; text-align: center">
              <i class="hi hi-map-marker"></i>&nbsp;<%=venue.address_details %>
            </small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
