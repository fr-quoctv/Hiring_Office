<div class="user-report-button" data-toggle="modal" data-target="
  #modal_report" data-whatever="@mdo">
  <i class="fa fa-flag-checkered" aria-hidden="true"></i>
  <strong><%= t "venues.report_button" %></strong>
</div>
<div class="modal fade" id="modal_report" tabindex="-1";
  aria-labelledby="modal_label_message" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close"
          data-dismiss="modal" aria-hidden="true"><%= t ".close" %></button>
        <h4 class="modal-title" id="modal_label_message">
          <%= t ".report" %>
        </h4>
      </div>
      <%= simple_form_for [@venue, Report.new] do |report| %>
        <div class="form-group">
          <div class="col-md-12">
            <div class="form-group">
              <%= report.hidden_field :venue_id, value: @venue.id %>
              <%= report.input :content, input_html: {class: "form-control margin-bot-10", "
                data-validation": "required"} %>
            </div>
          </div>
          <div class="modal-footer">
            <%= report.submit t("venues.create"), method: :create, class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
