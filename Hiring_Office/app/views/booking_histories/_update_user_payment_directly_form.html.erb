<%= simple_form_for [order.venue, order, user_payment_directly] do |f| %>
  <%= f.input :name,
    input_html: { class: "form-control margin-bot-10",
    "data-validation": "required", disabled: true} %>
  <%= f.input :email,
    input_html: { class: "form-control margin-bot-15",
    "data-validation": "email", disabled: true} %>
  <%= f.input :phone,
    input_html: { class: "form-control margin-bot-15",
    "data-validation": "length", disabled: true} %>
  <%= f.input :address,
    input_html: {class: "form-control margin-bot-15", disabled: true} %>
  <%= t "booking_histories.choose_payment.status" %>
  <%= label_tag t("status"), user_payment_directly.status, class: "label label-danger"%>
<% end %>
