<div class="modal fade" id="modal_payment_info" tabindex="-1" role="dialog"
  aria-labelledby="modal_label_message" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close"
          data-dismiss="modal" aria-hidden="true"><%= t ".close" %></button>
        <h4 class="modal-title" id="modal_label_message">
          <%= t ".payment_info" %>
        </h4>
      </div>
      <div class="form-group">
        <%= render "payment_directly_info", order: order %>
        <div class="col-md-12">
          <label class ="col-md-6">
            <%= t ".deadline" %>
          </label>
          <div class= "col-md-6">
            <% if order.find_directly_info.pending_time %>
              <%= l (order.updated_at + order.payment_detail.pending_time.hours), format: :order_date %>
            <% else %>
              <%= t ".no_deadline" %>
            <% end %>
          </div>
        </div>
        <div class="col-md-12">
          <label class ="col-md-6">
            <%= t ".status" %>
          </label>
          <div class= "col-md-6">
            <label class = "label label-info">
              <%= order.status.titleize %>
            </label>
          </div>
        </div>
      </div>
      <div class="modal-footer">
      </div>
    </div>
  </div>
</div>
