<% provide :title, t("notification.notification") %>
<div class="row full-height margin-left-0 margin-right-0 scroll-y">
  <div class="block-title-notification">
    <h3 class="btn-edit">
      <i class="fa fa-bell"></i>
      <strong><%= t "notification.all" %></strong>
    </h3>
  </div>
  <div class="block-all-notification all-notification">
    <div class="block-section text-center">
      <a href="javascript:">
        <%= image_tag "notification.jpg", class: "avatar" %>
      </a>
      </p>
      <label>
        <i class="fa fa-inbox"> <%= t "notification.message" %></i> &
        <i class="fa fa-clock-o"> <%= t "notification.time" %></i>
      </label>
    </div>
    <div class="block col-md-12">
      <div class="col-md-3"></div>
      <div class="table-responsive">
        <table>
          <% @notifications.each do |notification| %>
            <tr>
              <td>
                <div class="<%= status_unread notification %> mark-read" data-id="<%= notification.id %>">
                  <div>
                    <% if current_user.image %>
                      <%= image_tag current_user.image.picture_url, size: Settings.reviews.avatar_size,
                        class: "border-radius-10" %>
                    <% else %>
                      <%= image_tag "user.jpg", size: Settings.reviews.avatar_size,
                        class: "border-radius-10" %>
                    <% end %>
                    <%= link_to notification.load_message,
                      load_link_notification(notification.message, notification.notifiable_type),
                      class: "style-all-notification" %>
                  </div>
                </div>
                </p>
              </td>
            </tr>
          <% end %>
        </table>
      </div>
      <div class="row paginate_and_page_info">
        <div class="col-md-12">
          <%= paginate @notifications %>
        </div>
        <div class="col-md-12">
          <%= page_entries_info @notifications %>
        </div>
      </div>
    </div>
  </div>
</div>
