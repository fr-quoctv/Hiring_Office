<% provide :title, t(".sign_up") %>
<div id="counter" class="row full-height margin-left-0 margin-right-0 vertical-offset-100">
  <div class="col-md-3"></div>
  <div class="col-md-6 col-sm-12 animation-fadeIn">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title title-color">
          <%= t ".remind" %>
        </h3>
      </div>
      <div class="panel-body">
        <%= form_for resource, as: resource_name,
          url: registration_path(resource_name), html: {role: "form"} do |f| %>
          <%= devise_error_messages! %>
          <fieldset>
            <div class="form-group padding-bot-10">
              <%= f.text_field :name, autofocus: true, class: "form-control",
                placeholder: t(".name") %>
            </div>
            <div class="form-group padding-bot-10">
              <%= f.email_field :email, class: "form-control",
                placeholder: t(".email") %>
            </div>
            <div class="form-group padding-bot-10">
              <%= f.password_field :password, autocomplete: "off",
                class: "form-control",
                placeholder: t(".password") %>
            </div>
            <div class="form-group padding-bot-10">
              <%= f.password_field :password_confirmation,
                autocomplete: "off", class: "form-control",
                placeholder: t(".confirm_pass") %>
            </div>
            <%= f.submit t(".sign_up"),
              class: "btn btn-lg btn-primary btn-block" %>
          </fieldset>
        <% end %>
      </div>
      <div class="panel-body">
        <small><%= t ".have_account" %></small>
        <%= link_to t(".login"),
          new_session_path(resource_name), data: {turbolinks: false} %>
      </div>
    </div>
  </div>
  <div class="col-md-3"></div>
</div>
