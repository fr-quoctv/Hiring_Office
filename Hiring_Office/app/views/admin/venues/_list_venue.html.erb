<table class="table table-striped table-venues">
  <tr class="display-venues">
    <th><%= t "admin.venues.index" %></th>
    <th><%= t "admin.venues.name" %></th>
    <th><%= t "admin.venues.address" %></th>
    <th><%= t "admin.venues.email" %></th>
    <th><%= t "admin.venues.block" %></th>
    <th><%= t "admin.venues.report" %></th>
  </tr>
  <% @venues.each do |venue| %>
    <tr>
      <td><%= venue.id %></td>
      <td><%= link_to venue.name, admin_venue_path(venue) %></td>
      <td><%= venue.address.details %></td>
      <td><%= venue.email %></td>
      <td>
        <label class="switch switch-danger">
          <%= check_box_tag :block, venue.block, venue.block, id: "block_venue_#{venue.id}", class: "block_venue", 
            data: {id: venue.id} %>
          <span></span>
        </label>
      </td>
      <td>
        <%= link_to count_report(venue), admin_venue_path(venue) %>
        <i class="fa fa-flag-checkered" aria-hidden="true"></i>
      </td>
    </tr>
  <% end %>
</table>
<div class="paginate_and_page_info">
  <%= paginate @venues %>
  <%= page_entries_info @venues %>
</div>  
