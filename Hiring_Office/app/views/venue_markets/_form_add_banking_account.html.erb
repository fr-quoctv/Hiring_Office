<%= f.input :card_name,
  input_html: {class: "form-control margin-bot-10",
  "data-validation": "required",
  placeholder: t("confirm_payment_banking.card_name_placeholder")} %>
<%= f.input :card_number,
  input_html: {class: "form-control margin-bot-15",
  "data-validation": "required",
  placeholder: t("confirm_payment_banking.card_number_placeholder")} %>
<%= f.input :card_address,
  input_html: {class: "form-control margin-bot-15",
  "data-validation": "required",
  placeholder: t("confirm_payment_banking.card_address_placeholder")} %>
<%= f.input :banking_name,
  input_html: {class: "form-control margin-bot-15",
  "data-validation": "required",
  placeholder: t("confirm_payment_banking.banking_name_placeholder")} %>
<%= f.input :message,
  input_html: {value: t("venue_markets.message"), class: "form-control margin-bot-15"} %>
<div class="row">
  <div class="col-md-12 form-banking">
    <label><%= t("venue_markets.pending_time") %></label>
  </div>
  <div class="col-md-6 form-banking">
    <%= f.input :day,
      input_html: {class: "form-control margin-bot-15",
      "data-validation": "required", placeholder: t("confirm_payment_banking.day_placeholder")} %>
  </div>
  <div class="col-md-6 form-banking">
    <%= f.input :hour,
      input_html: {class: "form-control margin-bot-15",
      "data-validation": "required", placeholder: t("confirm_payment_banking.hour_placeholder")} %>
  </div>
</div>
<div>
  <label>
    <%= f.check_box :verified,
      "data-validation": "required" %><%= t("venue_markets.verify")%>
  </label>
</div>
<div class="pull-right">
  <%= f.button :submit, value: t("venue_markets.edit.btn_add_banking"),
    id: "btn_add_banking", class: "btn btn-primary margin-bot-15" %>
  <div class="margin-top-15"></div>
</div>
