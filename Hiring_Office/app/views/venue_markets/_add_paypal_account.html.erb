<div class="modal fade" id="modal_add_method" tabindex="-1" role="dialog"
  aria-labelledby="modal_label_message" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close"
          data-dismiss="modal" aria-hidden="true"><%= t ".close" %></button>
        <h4 class="modal-title" id="modal_label_message">
          <%= t "venue_markets.edit.add_paypal_account" %>
        </h4>
      </div>
      <div id="error">
      </div>
      <div class="form-group">
        <div class="col-md-12">
          <%= simple_form_for [@venue, @payment_method], remote: true do |payment| %>
            <%= payment.hidden_field :payment_type, value: Settings.payment_methods.paypal %>
            <div class="form-paypal">
              <div class="form-group paypal-info">
                <%= payment.input :email, input_html: {class: "form-control",
                  value: "#{current_user.email}"} %>
              </div>
            </div>
        </div>
        <div class="modal-footer">
          <%= payment.submit t("venue_markets.edit.add"), class: "btn btn-primary" %>
        </div>
          <% end %>
      </div>
    </div>
  </div>
</div>
